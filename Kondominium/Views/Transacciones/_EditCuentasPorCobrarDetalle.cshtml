@model IEnumerable<Kondominium_Entities.CuentasPorCobrarDetalleEntity>



<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">
                @*<i class="fas fa-plus-circle"></i>*@
                @*<a class="btn btn-info" href="#" data-toggle="modal" data-target="#UploadFileModal">
                    <i class="fas fa-plus-circle fa-sm fa-fw mr-2 text-gray-300"></i>Agregar Detalle
                </a>*@
            </h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.DetalleId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ProductoId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Descripcion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Monto)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DetalleId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ProductoId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Descripcion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Monto)
                                </td>
                                <td>
                                    @Html.ActionLink("Eliminar Registro", "DeleteCxcDet", new { DetalleId = item.DetalleId, VaucherNumber = item.VaucherNumber })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

