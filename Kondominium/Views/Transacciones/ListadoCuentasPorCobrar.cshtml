@model IEnumerable<Kondominium_Entities.CuentasPorCobrarEntity>

@{
    ViewBag.Title = "ListadoCuentasPorCobrar";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Lista de Recibos emitidos</h1>
    <p class="mb-4"></p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="fas fa-plus-circle"></i>
                @Html.ActionLink("Crear Nuevo", "EditCuentasPorCobrar")
            </h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.VaucherNumber)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ClienteId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FullNameCondomino)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.VPropiedad)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TipoCxC)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FechaDeEmision)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FechaDeVencimiento)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PeriodoFacturado)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Total)
                            </th>

                        </tr>

                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>
                                    @Html.ActionLink(item.VaucherNumber.ToString(), "EditCuentasPorCobrar", new { VaucherNumber = item.VaucherNumber })
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.ClienteId)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.FullNameCondomino)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.VPropiedad)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.TipoCxC)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.FechaDeEmision)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.FechaDeVencimiento)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.PeriodoFacturado)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.Total)
                                </td>


                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
