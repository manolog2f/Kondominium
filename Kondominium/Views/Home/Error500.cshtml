@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error";
}

    <style>
        #imgError:hover {
            /*filter: blur(5px);*/
            /*filter: opacity(.5);*/
            border-radius: 50%;
            -webkit-border-radius: 50%;
            box-shadow: 0px 0px 15px 15px #ec731e;
            -webkit-box-shadow: 0px 0px 15px 15px #ec731e;
            transform: rotate(360deg);
            -webkit-transform: rotate(360deg);
        }
    </style>

<div class="container-fluid">

    <!-- 404 Error Text -->
    <div class="text-center">
        <div class="error mx-auto" data-text="500">500</div>

        <div class="error mx-auto">
            <img id="imgError" src="~/Content/images/page-not-foundG.png" alt="Alternate Text" style="height:200px;  " />
            <p class="lead text-gray-800 mb-5">Pagina no Encontrada</p>
        </div>


        <a href="@Url.Action("Index", "Home", new { area = string.Empty, controller = "Home" }, Request.Url.Scheme)">
            <span>&larr; Regresar a Inicio</span>
        </a>


    </div>

</div>