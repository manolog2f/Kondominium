@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error";
}

<style>
    #imgError:hover {
           filter: blur(5px);
           /*filter: opacity(.5);*/
    }
    
</style>
<div class="container-fluid">

    <!-- 404 Error Text -->
    <div class="text-center">
        <div class="error mx-auto" data-text="404">404</div>

        <div class="error mx-auto">
            <img id="imgError" src="~/Content/images/page-not-foundG.png" alt="Alternate Text" style="height:200px;  " />
            <p class="lead text-gray-800 mb-5">Pagina no Encontrada</p>
        </div>

        @*<p class="lead text-gray-800 mb-5">Pagina no Encontrada</p>*@
        <p class="text-gray-500 mb-0">Parece que encontraste una falla...</p>

        <a href="@Url.Action("Index", "Home", new { area = string.Empty, controller = "Home" }, Request.Url.Scheme)">
            <span>&larr; Regresar a Inicio</span>
        </a>


    </div>

</div>