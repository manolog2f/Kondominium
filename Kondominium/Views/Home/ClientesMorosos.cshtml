@model IEnumerable<Kondominium_Entities.DashClientesMorosos>

<div class="table-responsive">
    <table class="table table-striped table-hover table-bordered" id="dataTable1" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ClienteId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FullName)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.SaldoActual)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClienteId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.SaldoActual)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>


    <a href="@Url.Action("ExportarClientesMorosos", "Home")" class="btn btn-info">
        <i class="fa fa-file-excel"></i> Exportar a Excel
    </a>

</div>

<div id="UploadFileMensajes"></div>