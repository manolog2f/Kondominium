@model IEnumerable<Kondominium_Entities.ClientePropiedadEntity>

@{
    ViewBag.Title = "Listado Condómino/Propiedades";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Lista de Condómino / Propiedad</h1>
    <p class="mb-4"></p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="fas fa-plus-circle"></i>
                @Html.ActionLink("Crear Nuevo", "EditClientesPropiedades")
            </h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                ....
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ClienteId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PropiedadId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TipoCliente)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Justificacion)
                            </th>

                        </tr>


                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>
                                    @Html.ActionLink("Editar", "EditClientesPropiedades", new { ClienteId = item.ClienteId, PropiedadId = item.PropiedadId })
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cliente.VFullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Propiedad.VPropiedad)
                                </td>
                                <td>
                                    @{
                                        var itemc = new Kondominium_Entities.TipoClientes();
                                        itemc = (Kondominium_Entities.TipoClientes)int.Parse(item.TipoCliente);

                                    }

                                    @Html.DisplayFor(modelItem => itemc)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Justificacion)
                                </td>


                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="row">
                @*<button onclick="exportTableToExcel('dataTable')" class="btn btn-info"><i class="fa fa-file-excel" aria-hidden="true"></i> Exportar Excel</button>*@

                <a href="@Url.Action("ExportarClientesPropiedad", "Clientes")" class="btn btn-info">
                    <i class="fa fa-file-excel"></i> Exportar a Excel
                </a>


            </div>
        </div>
    </div>
</div>
