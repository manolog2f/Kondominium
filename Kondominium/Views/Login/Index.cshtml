
@{
    ViewBag.Title = "Iniciar sesión";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="app-content">
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="h-100 d-flex align-items-center justify-content-center">
                <div class="login">
                    <div class="card">
                        <div class="card-body p-2">
                            <a href="@Url.Action("Index", "Home")" title="Komdomioniun" class="logo">
                                <img src="~/Content/images/logo3.png" class="img-fluid" alt="Komdomioniun" />
                            </a>
                            <h5 class="mb-2">
                                <i class="fas fa-user-circle"></i>
                                Iniciar Sesión
                            </h5>
                            <hr class="mt-0 mb-2" />
                            <div class="form-group">
                                <label>Usuario</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text">
                                            <i class="fas fa-user-circle"></i>
                                        </div>
                                    </div>
                                    <input type="text" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text">
                                            <i class="fas fa-key"></i>
                                        </div>
                                    </div>
                                    <input type="password" class="form-control" />
                                    <div class="input-group-append">
                                        <button type="button" class="btn btn-primary">
                                            <i class="fas fa-eye"></i>
                                            Mostrar
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="mt-2 mb-2 text-center">
                                <button type="button" class="btn btn-primary btn-block">
                                    <i class="fas fa-sign-in-alt"></i>
                                    Iniciar Sesión
                                </button>
                            </div>
                            <div class="row mt-2">
                                <div class="col-6 text-left">
                                    <a href="">
                                        ¿Olvido su Password?
                                    </a>
                                </div>
                                <div class="col-6 text-right">
                                    <a href="#">
                                        ¿Olvido su Usuario?
                                    </a>
                                </div>
                            </div>
                            <hr class="mt-3 mb-2 bg-info">
                            <p class="text-center">
                                ©@DateTime.Now.Year <a href="https://www.facebook.com/lahaciendasv/">Komdomioniun</a>
                                Todos los Derechos Reservados
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>