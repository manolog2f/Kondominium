@model IEnumerable<ZTAdminEntities.Security.ProfileEntity>

@{
    ViewBag.Title = "PerfilList";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

    <div class="container-fluid">

        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">Lista de Perfiles</h1>
        <p class="mb-4"></p>

        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">@Html.ActionLink("Crear Nuevo", "PerfilEdit")</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.ProfileId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ProfileDescription)
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.ActionLink(item.ProfileId, "PerfilEdit", new { id = item.ProfileId.Trim() })
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ProfileDescription)
                                    </td>

                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.ProfileId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ProfileDescription)
                                </th>

                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>