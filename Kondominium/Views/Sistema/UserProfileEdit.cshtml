@model IEnumerable<ZTAdminEntities.Security.UserProfileEntity>

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Lista de Perfiles Asociados</h1>
    <p class="mb-4"></p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th></th>
                            <th>
                                @Html.DisplayNameFor(model => model.ProfileId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ProfileIdDesctiption)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Active)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>

                                    @*@Html.ActionLink("Remover", "_RemoverUserPerfil", new { Userid = item.UsuarioId, PerfilId = item.ProfileId })*@

                                    <button type="button" class="btn btn-primary" onclick="RemoverPerfil('@item.UsuarioId', '@item.ProfileId')">
                                        <i class="fa fa-eraser" aria-hidden="true"></i>
                                        Remover el perfil
                                    </button>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ProfileId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ProfileIdDesctiption)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Active)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div id="UploadFileMensajes">
</div>