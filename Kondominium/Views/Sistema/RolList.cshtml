@model IEnumerable<ZTAdminEntities.Security.RolEntity>

@{
    ViewBag.Title = "RolList";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Lista de Roles</h1>
    <p class="mb-4"></p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">@Html.ActionLink("Crear Nuevo", "EditRol")</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.RolId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.RolDescription)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UserId)
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.ActionLink(item.RolId, "EditRol", new { id = item.RolId.Trim() })
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RolDescription)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserId)
                                </td>

                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.RolId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.RolDescription)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UserId)
                            </th>

                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>