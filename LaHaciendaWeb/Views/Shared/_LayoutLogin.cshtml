<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | La Hacienda</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="back-login">
        @RenderBody()
    </div>

    <footer class="footer">
        <div class="app-content">
            <div class="row mt-3 mb-2">
                <div class="col-xl-3 col-lg-4 col-md-5 col-sm-12 col-12">
                    <a href="@Url.Action("Index", "Home")" class="logo" title="La Hacienda">
                        <img src="~/Content/images/logo.png" class="img-fluid" alt="La Hacienda" />
                    </a>
                </div>
                <div class="col-xl-5 col-lg-4 col-md-4 col-sm-6 col-12">
                    <br />
                    <p class="text-left mb-2">
                        <strong>
                            <i class="fas fa-map-marker-alt"></i>
                            DIRECCIÓN Y TELÉFONOS
                        </strong>
                        <br />
                        Lorem ipsum dolor sit amet, consectetur adipiscing elit.
                        <br />
                        <a href="tel:+50325555555">
                            <i class="fas fa-phone"></i>
                            2555-5555
                        </a>
                        <a href="tel:+50375555555">
                            <i class="fab fa-whatsapp"></i>
                            7555-5555
                        </a>
                    </p>
                    <p class="text-left mb-0">
                        <a href="#" title="Facebook" class="d-inline-block mr-2">
                            <i class="fab fa-facebook fa-2x"></i>
                        </a>
                        <a href="#" title="Facebook" class="d-inline-block mr-2">
                            <i class="fab fa-instagram fa-2x"></i>
                        </a>
                        <a href="#" title="Facebook" class="d-inline-block mr-2">
                            <i class="fab fa-youtube fa-2x"></i>
                        </a>
                    </p>
                </div>
                <div class="col-xl-4 col-lg-4 col-md-3 col-sm-6 col-12">
                    <br />
                    <ul>
                        <li><a href="@Url.Action("Index", "Home")">Inicio</a></li>
                        <li><a href="@Url.Action("About", "Home")">Acerca de nosotros</a></li>
                        <li><a href="@Url.Action("Index", "Login")">Login</a></li>
                    </ul>
                </div>
            </div>
            <hr class="mt-0 mb-2" />
            <p class="text-center">
                ©@DateTime.Now.Year <a href="https://www.facebook.com/lahaciendasv/">La Hacienda</a> Todos los Derechos Reservados
            </p>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>